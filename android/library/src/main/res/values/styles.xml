<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ym_theme" parent="android:Theme.Holo.Light"/>

    <style name="ym_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ym_button.Primary">
        <item name="android:background">@drawable/ym_button_primary_background</item>
        <item name="android:textColor">@color/ym_button_primary</item>
    </style>

    <style name="ym_button.Primary.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ym_button.Secondary">
        <item name="android:background">@drawable/ym_button_secondary_background</item>
        <item name="android:textColor">@color/ym_button_secondary</item>
    </style>

    <style name="ym_text_view" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ym_text_color_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ym_text_view.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ym_text_view.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ym_text_view.Card">
        <item name="android:textColor">@color/ym_text_color_dark</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ym_text_view.Title">
        <item name="android:textColor">@color/ym_text_color_title</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="ym_card" parent="android:Widget">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">@dimen/ym_screen_border_margin</item>
    </style>

</resources>